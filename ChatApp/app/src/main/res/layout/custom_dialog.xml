<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo_upload"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="vulan.com.chatapp.activity.PhotoUploadActivity">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/common_size_6"
        android:id="@+id/button_choose_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

        <TextView
            android:layout_width="@dimen/common_size_200"
            android:layout_height="@dimen/common_size_40"
            android:gravity="center"
            android:text="@string/gallery"
            android:textSize="@dimen/common_text_size_20"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/common_size_6"
        app:cardCornerRadius="@dimen/common_size_6"
        android:id="@+id/button_choose_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

        <TextView
            android:layout_width="@dimen/common_size_200"
            android:layout_height="@dimen/common_size_40"
            android:gravity="center"
            android:text="@string/camera"
            android:textSize="@dimen/common_text_size_20"/>
    </android.support.v7.widget.CardView>

</LinearLayout>