<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_size_300"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_dark" />

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="@dimen/common_size_100"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_bubble"
        android:maxWidth="@dimen/common_size_50"
        android:text="123"
        android:textSize="@dimen/common_text_size_14" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_chat_bubble"
        android:gravity="right"
        android:text="14:03"
        android:textSize="@dimen/common_text_size_4" />
</LinearLayout>