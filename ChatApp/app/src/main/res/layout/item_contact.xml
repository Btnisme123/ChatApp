<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_chat_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/common_size_40"
        android:layout_height="@dimen/common_size_40"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_size_10"
        android:layout_weight="3"
        android:gravity="center"
        android:text="MTA"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_6" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="center"
        android:text="14:03 PM"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_1" />
</LinearLayout>